import Pkg
Pkg.activate(".")
Pkg.add("Plots")

# Create folders
mkpath("src")
mkpath("test")
mkpath("notebooks")  # ‚Üê add notebooks folder

# Minimal module
module_code = """
module nr1

greet(name) = "Hello, \$name!"

end
"""
write("src/nr1.jl", module_code)

# Minimal test
test_code = """
using Test
using nr1

@test greet("Julia") == "Hello, Julia!"
"""
write("test/runtests.jl", test_code)

println("‚úÖ Project nr1 initialized with notebooks folder.")
println("üóíÔ∏è You can now save Pluto or Jupyter notebooks in `notebooks/`.")
